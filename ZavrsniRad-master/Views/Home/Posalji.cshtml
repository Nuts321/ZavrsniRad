
@{
    ViewData["Title"] = "Posalji";
}

<div class="row">
    <div class="col-md-12">
        <div id="poruka" class="alert alert-info">@ViewBag.Poruka</div>
    </div>
    <div class="col-md-5">
        <form asp-action="Posalji" asp-controller="Home" method="post">
            <div class="form-group">
                <label for="TextIme">Ime:</label>
                <input type="text" name="ime" id="TextIme" class="form-control" autofocus required oninvalid="this.setCustomValidity('Unesite Vase Ime')" oninput="this.setCustomValidity('')">
            </div>
            <div class="form-group">
                <label for="TextPrezime">Prezime:</label>
                <input type="text" name="prezime" id="TextPrezime" class="form-control" required oninvalid="this.setCustomValidity('Unesite Vase Prezime')" oninput="this.setCustomValidity('')">
            </div>
            <div class="form-group">
                <label for="TextEmail">Email:</label>
                <input type="email" name="email" id="TextEmail" class="form-control" required oninvalid="this.setCustomValidity('Unesite Vasu email adresu')" oninput="this.setCustomValidity('')">
            </div>
            <div class="form-group mt-3">
                <label class="ta" for="TextPoruka">Poruka:</label>
                <textarea name="poruka" id="TextPoruka" cols="30" rows="10" class="form-control" required oninvalid="this.setCustomValidity('Unesite Vasu Poruku')" oninput="this.setCustomValidity('')"></textarea>
                <input type="submit" value="Posalji" class="btn btn-success form-group" style="margin-top: 5px !important;">
            </div>
        </form>
    </div>
    <div class="col-md-5 mt-4">
        <iframe src="https://www.google.com/maps/embed?pb=" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            if ($("#poruka").text() == "") {
                $("#poruka").attr("style", "display:none");
            }
        });
    </script>
}