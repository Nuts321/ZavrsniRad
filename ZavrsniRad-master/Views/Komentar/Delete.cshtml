@model Komentar

@{
    ViewData["Title"] = "Delete";
}

<h1>Obrisi</h1>

<h3>Da li ste sigurni da zelite da obrisete komentar?</h3>
<div class="container">
    <div>
        <h4>Komentar</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Korisnik
            </dt>
            <dd class="col-sm-10">
                @Model.Korisnik
            </dd>
            <dt class="col-sm-2">
                Opis
            </dt>
            <dd class="col-sm-10">
                <textarea placeholder="@Model.Opis" class="form-control" readonly></textarea>
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="KomentarId" />
            <input type="submit" value="Obrisi" class="btn btn-danger" />
            <a class="btn btn-info" asp-action="Index">Vrati se na komentare</a>
        </form>
    </div>
</div>

